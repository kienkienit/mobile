<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:viewBindingIgnore="true"
    android:orientation="vertical"
    android:padding="@dimen/define_dimen_10"
    tools:ignore="Autofill,LabelFor" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm đồ uống"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_xnormal"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_30"
        android:text="Tên đồ uống"
        android:textSize="@dimen/text_size_small" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:inputType="text"
        android:layout_marginTop="@dimen/define_dimen_5"
        android:padding="@dimen/define_dimen_12"
        android:background="@drawable/bg_white_corner_16_border_gray"
        android:imeOptions="actionNext"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_16"
        android:text="Mô tả"
        android:textSize="@dimen/text_size_small" />

    <EditText
        android:id="@+id/edt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:inputType="text"
        android:layout_marginTop="@dimen/define_dimen_5"
        android:padding="@dimen/define_dimen_12"
        android:background="@drawable/bg_white_corner_16_border_gray"
        android:imeOptions="actionNext"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_16"
        android:text="Giá"
        android:textSize="@dimen/text_size_small" />

    <EditText
        android:id="@+id/edt_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:inputType="number"
        android:layout_marginTop="@dimen/define_dimen_5"
        android:padding="@dimen/define_dimen_12"
        android:background="@drawable/bg_white_corner_16_border_gray"
        android:imeOptions="actionNext"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_16"
        android:text="Sale (%)"
        android:textSize="@dimen/text_size_small" />

    <EditText
        android:id="@+id/edt_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:inputType="number"
        android:background="@drawable/bg_white_corner_16_border_gray"
        android:layout_marginTop="@dimen/define_dimen_5"
        android:padding="@dimen/define_dimen_12"
        android:imeOptions="actionNext"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_16"
        android:text="Hình ảnh"
        android:textSize="@dimen/text_size_small" />

    <EditText
        android:id="@+id/edt_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:inputType="text"
        android:layout_marginTop="@dimen/define_dimen_5"
        android:padding="@dimen/define_dimen_12"
        android:background="@drawable/bg_white_corner_16_border_gray"
        android:imeOptions="actionNext"
        android:textSize="@dimen/text_size_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/define_dimen_10">

        <Button
            android:id="@+id/btn_select_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_button_enable_corner_16"
            android:text="Chọn từ thư viện"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:textAllCaps="false"
            android:padding="@dimen/define_dimen_10"/>

        <Button
            android:id="@+id/btn_capture_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_button_enable_corner_16"
            android:text="Chụp ảnh"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:textAllCaps="false"
            android:padding="@dimen/define_dimen_10"
            android:layout_marginStart="@dimen/define_dimen_10"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_16"
        android:text="Danh mục"
        android:textSize="@dimen/text_size_small" />

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_5"
        android:background="@drawable/bg_white_corner_16_border_gray" />

    <CheckBox
        android:id="@+id/checkbox_featured"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặc biệt"
        android:layout_marginTop="@dimen/define_dimen_16"
        android:textSize="@dimen/text_size_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_30"
        android:layout_marginBottom="@dimen/define_dimen_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/define_dimen_10"
            android:layout_weight="1"
            android:background="@drawable/bg_button_disable_corner_16"
            android:gravity="center"
            android:padding="@dimen/define_dimen_10"
            android:paddingStart="@dimen/define_dimen_16"
            android:paddingEnd="@dimen/define_dimen_16"
            android:text="Hủy"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_button_enable_corner_16"
            android:gravity="center"
            android:padding="@dimen/define_dimen_10"
            android:text="Thêm"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>
</LinearLayout>
